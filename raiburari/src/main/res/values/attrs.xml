<resources>
  <declare-styleable name="AppTheme">
    <attr format="color" name="actionBarIconColor"/>
    <attr format="dimension" name="actionBarInsetStart"/>
  </declare-styleable>
  <declare-styleable name="BezelImageView">
    <attr format="reference" name="maskDrawable"/>
    <attr format="reference" name="borderDrawable"/>
    <attr format="boolean" name="desaturateOnPress"/>
  </declare-styleable>

  <declare-styleable name="RaiFontSupportedTextView">
    <attr format="string" name="fontFile"/>
  </declare-styleable>

  <!-- BloatedRecyclerView -->
  <declare-styleable name="RaiBloatedRecyclerView">
    <attr format="boolean" name="recyclerviewClipToPadding"/>
    <attr format="dimension" name="recyclerviewPadding"/>
    <attr format="dimension" name="recyclerviewPaddingTop"/>
    <attr format="dimension" name="recyclerviewPaddingBottom"/>
    <attr format="dimension" name="recyclerviewPaddingLeft"/>
    <attr format="dimension" name="recyclerviewPaddingRight"/>
    <attr format="reference" name="recyclerviewEmptyView"/>
    <attr format="reference" name="recyclerviewFloatingActionView"/>
    <attr format="enum" name="recyclerviewScrollbars">
      <enum name="none" value="0"/>
      <enum name="vertical" value="1"/>
      <enum name="horizontal" value="2"/>
    </attr>
  </declare-styleable>
  <!-- ContextView -->
  <declare-styleable name="RaiContextMenu">
    <attr format="dimension" name="contextMenuWidth"/>
    <attr format="reference" name="contextMenuBackgroundView"/>
    <attr format="reference" name="contextMenuBackgroundShadowRes"/>
    <attr format="enum" name="contextMenuOrientation">
      <enum name="vertical" value="1"/>
      <enum name="horizontal" value="2"/>
    </attr>
  </declare-styleable>
</resources>