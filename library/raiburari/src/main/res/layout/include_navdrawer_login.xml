<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:ushApp="http://schemas.android.com/apk/res-auto"
             android:id="@+id/layout_user_login"
             android:layout_width="match_parent"
             android:layout_height="@dimen/navdrawer_user_account_height"
             android:background="?attr/colorAccent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/content_padding"
            android:paddingRight="@dimen/content_padding"
            android:paddingTop="@dimen/content_padding">

        <com.addhen.android.raiburari.presentation.ui.widget.BezelImageView
                android:id="@+id/anonymous_user_image"
                android:layout_width="@dimen/navdrawer_user_profile_image_size"
                android:layout_height="@dimen/navdrawer_user_profile_image_size"
                android:scaleType="centerCrop"
                android:src="@drawable/user_profile_image_empty"
                ushApp:maskDrawable="@drawable/circle_mask"/>

        <TextView
                android:id="@+id/user_login_title"
                style="@style/NavDrawer.Login"
                android:text="@string/login"/>

    </RelativeLayout>

</FrameLayout>