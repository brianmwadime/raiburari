<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@android:color/white"
    android:fitsSystemWindows="true"
    tools:ignore="MissingPrefix">

    <ListView
        android:id="@+id/navdrawer_list"
        android:layout_width="@dimen/navdrawer_width"
        android:layout_height="match_parent"
        android:layout_above="@+id/navdrawer_footer"
        android:layout_gravity="start"
        android:background="@android:color/white"
        android:cacheColorHint="@android:color/transparent"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:fitsSystemWindows="true" />


    <RelativeLayout
        android:id="@+id/navdrawer_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/white">

        <RelativeLayout
            android:id="@+id/footerDrawer"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/iconFooter"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:contentDescription="@string/clear" />

            <com.addhen.raiburari.client.ui.widget.FontSupportedTextView
                android:id="@+id/titleFooter"
                fontFile="Roboto-Medium.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/iconFooter"
                android:layout_toRightOf="@+id/iconFooter"
                android:text="@string/clear"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_medium" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>