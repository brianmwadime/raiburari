<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LinearLayout.Vertical.Full"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:id="@+id/navdrawer_separator_layout"
        style="@style/LinearLayout.Horizontal"
        android:visibility="gone">

        <View
            android:id="@+id/navdrawer_separator"
            style="@style/Divider" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/navdrawer_item_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/navdrawer_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:alpha="0.54"
            android:contentDescription="@string/clear" />

        <com.addhen.raiburari.client.ui.widget.SupportedTextView
            android:id="@+id/navdrawer_title"
            fontFile="Roboto-Medium.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/navdrawer_icon"
            android:layout_toLeftOf="@+id/navdrawer_counter"
            android:layout_toRightOf="@+id/navdrawer_icon"
            android:layout_toStartOf="@+id/navdrawer_counter"
            android:alpha="0.87"
            android:textColor="@color/navdrawer_text_color"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/navdrawer_counter"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center_horizontal"
            android:lines="1"
            android:maxLength="3"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />
    </RelativeLayout>
</LinearLayout>
