<resources>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/color_primary</item>
    </style>

    <style name="ViewPager">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="PagerTabStrip">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/color_primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LinearLayout.Vertical">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LinearLayout.Vertical.Full">
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="LinearLayout.Vertical.Wrap">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LinearLayout.Horizontal">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LinearLayout.Horizontal.Full">
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LinearLayout.Horizontal.Wrap">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FrameLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FrameLayout.Full">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="TableLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:stretchColumns">0</item>
        <item name="android:shrinkColumns">*</item>
    </style>

    <style name="TableRow">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="ScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ScrollView.Vertical">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ScrollView.Vertical.Full">
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="ScrollView.Vertical.Wrap">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextView" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="TextView.Loading">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TextView.Label">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="TextView.Value">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="TextView.Title">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="TextView.Title.Truncate">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextView.SubTitle">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="TextView.SubTitle.Truncate">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextView.Title.Center">
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView.Description">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="TextView.Description.Truncate">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextView.Description.Center">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="TextView.Links">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:linksClickable">true</item>
        <item name="android:autoLink">web|email</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="TextView.Links.Center">
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView.Info">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextView.Empty">
        <item name="android:visibility">gone</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="TextView.Error">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/text_error</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="TextView.Required">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/text_required</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="TextView.Prefix">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:layout_weight">0</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="TextView.Suffix">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_weight">0</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="EditText" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="EditText.Label">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="EditText.NoSuggestions">
        <item name="android:inputType">textFilter|textNoSuggestions</item>
    </style>

    <style name="EditText.Number">
        <item name="android:inputType">number</item>
    </style>

    <style name="EditText.Number.Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="EditText.Decimal">
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="EditText.Decimal.Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="EditText.Phone">
        <item name="android:inputType">phone</item>
    </style>

    <style name="EditText.Multiline">
        <item name="android:inputType">textMultiLine|textCapSentences</item>
        <item name="android:minLines">3</item>
    </style>

    <style name="EditText.URL">
        <item name="android:inputType">textUri</item>
    </style>

    <style name="EditText.Password">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="EditText.Email">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="EditText.Name">
        <item name="android:inputType">textPersonName|textCapWords</item>
    </style>

    <style name="EditText.Search">
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="EditText.CapWords">
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="EditText.CapCharacters">
        <item name="android:inputType">textCapCharacters</item>
    </style>

    <style name="EditText.CapSentences">
        <item name="android:inputType">textCapSentences</item>
    </style>

    <style name="EditText.PostalAddress">
        <item name="android:inputType">textPostalAddress</item>
    </style>

    <style name="EditText.ReadOnly">
        <item name="android:inputType">none</item>
    </style>

    <style name="RadioGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="RadioGroup.Vertical">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RadioGroup.Vertical.Full">
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="RadioGroup.Vertical.Wrap">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RadioGroup.Horizontal">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RadioGroup.Horizontal.Full">
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="RadioGroup.Horizontal.Wrap">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="RadioButton.Full">
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="RadioButton.Fill">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="ImageView.Photo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="ImageView.Full">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="ImageButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/image_button</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="ImageButton.Wrap">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="ImageButton.Center">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="ImageButton.Fab">
        <item name="android:layout_width">@dimen/fab_size_width</item>
        <item name="android:layout_height">@dimen/fab_size_height</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/fab_margin_right</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin_bottom</item>
        <item name="android:background">@drawable/ic_fab</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:contentDescription">@string/add</item>
    </style>

    <style name="CheckBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="DatePicker">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:spinnersShown">true</item>
        <item name="android:calendarViewShown">false</item>
    </style>

    <style name="TimePicker">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:spinnersShown">true</item>
        <item name="android:calendarViewShown">false</item>
    </style>

    <style name="SwipeRefreshLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="VideoView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_gravity">fill_vertical|fill_horizontal</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="Divider.Padded">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="CardView.Rounded" parent="CardView.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardElevation">5dp</item>
        <item name="contentPadding">0dp</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

    <style name="RecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="Spinner" parent="@android:style/Widget.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawSelectorOnTop">false</item>
    </style>

    <style name="ProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:progressDrawable">@drawable/ic_progress_bar</item>
    </style>

    <style name="ProgressBar.Large" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="Button" parent="@android:style/Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="Button.Transparent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>

    <style name="Button.Primary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="Button.Secondary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="Button.Fill">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Button.Left">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Button.Right">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Button.Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">0</item>
    </style>

    <style name="ListView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="ListView.Wrap">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MapView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="NavDrawer.Login" parent="android:Widget">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
